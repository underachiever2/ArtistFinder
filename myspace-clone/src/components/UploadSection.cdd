.upload-section {
  background-color: #333333;
  padding: 20px;
  border-radius: 10px;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20px;
  width: 100%;
}

.upload-button {
  background-color: #d32f2f; /* Red Button */
  color: #ffffff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  margin: 10px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s;
}

.upload-button:hover {
  background-color: #b71c1c; /* Darker Red on Hover */
}
